
    <tr class="named_row" >
			<td><%= check_box_tag 'country_ids[]', 
												country.id, 
												country.visited?(current_user), 
												:class => 'check', :id => "checkbox_code_#{country.id}" %></td>
      <td class="_name"><%= country.name %></td>
      <td><%= country.code %></td>
      <td class="status"><%= @visited_countries.include?(country) ? 'Visited' : 'Not Visited' %></td>
      <td><%= link_to 'Show', country %></td>
      <td><%= link_to 'Edit', edit_country_path(country) %></td>
    </tr>
