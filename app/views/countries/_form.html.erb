<%= form_for(@country) do |f| %>
  <% if @country.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@country.errors.count, "error") %> prohibited this country from being saved:</h2>

      <ul>
      <% @country.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>
	<div class="field">
    <label for="country_visited">Visited</label><br />
    
		<input <%= @country.visited?(current_user) ? 'checked="checked"' : "" %> id="country_visited" 	
					name="country[visited]" type="checkbox" value="1" />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
